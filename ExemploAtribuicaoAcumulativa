package estrutura_condicional;

import java.util.Locale;
import java.util.Scanner;

public class exemploAtribuicaoAcumulativa {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int minutos = sc.nextInt();
		    //define int como um valor que sera descrito pelo usuario.
		double conta = 50.0;
        //define um valor para o double.
		if (minutos > 100) {
			conta += (minutos - 100) * 2.0;
		}
        //if = se.
        //se minutos for maior que 100, a conta será realizada.
		 System.out.printf("Valor da conta = R$ %.2f%n", conta);

		sc.close();
		//os operadores acumulativos nada mais são do que uma abreviação no caso 
    //ao inves de utilizar x = x+y por exemplo pode-se utilizar no lugar x+=y poupando espaço na linha de codigo
	}

} 
